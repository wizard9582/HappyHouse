<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- name space: 쿼리를 구별하기 위한 키워드 -->
<mapper namespace="com.ssafy.happyhouse.model.repo.UserRepo">
	<insert id="insertUser" parameterType="User">
		insert into USER (id, name, pass, nick, address, phone) 
		values (#{id}, #{pass}, #{nick}, #{address}, #{phone})
	</insert>
	<delete id="deleteUser" parameterType="string">
		delete 
		from user 
		where id = #{id}
	</delete>
	<select id="getUser" parameterType="string" resultType="User">
		select * 
		from user 
		where id=#{id}
	</select>
	<update id="changeUser" parameterType="User">
		update user 
		set pass=#{pass}, nick=#{nick}, address=#{address}, phone=#{phone} 
		where id=#{id}
	</update>
</mapper>